<div ng-controller="MainController" layout="column" layout-padding>
    <form action="/register" method="POST">
        <md-content>
            <md-card style="paddng-left: 50px;">
                <md-input-container class="md-block" layout="row">
                    <md-icon class="email"><i class="material-icons">email</i></md-icon>
                    <input name="email" ng-model="user.email" type="email" placeholder="Email (required)" ng-required="true">
                </md-input-container>
                <md-input-container class="md-block" layout="row">
                    <md-icon class="lock"><i class="material-icons">lock</i></md-icon>
                    <input name="password" ng-model="user.password" type="password" placeholder="Password" ng-required="true">
                </md-input-container>
                <div layout="row">
                    <md-button method class="md-raised" type="submit">Sign Up</md-button>
                </div>
            </md-card>
        </md-content>
    </form>
</div>